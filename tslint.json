{
  "compilerOptions": {
    "noImplicitAny": false,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "extends": "tslint:recommended",
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  },
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false
  }
}
