{
  "name": "pocketcasts-electron",
  "version": "0.1.0",
  "main": "main.js",
  "build": {
    "appId": "com.pocketcasts.app",
    "files": [
      "**/*",
      "build/icon.*"
    ],
    "mac": {
      "category": "sound.pocketcasts"
    }
  },
  "scripts": {
    "compile": "rimraf app/out",
    "dist": "yarn compile && electron-builder",
    "pack": "yarn compile && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "release": "yarn compile && electron-builder",
    "start": "yarn install && yarn compile && electron ./app"
  },
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^19.56.0",
    "electron-debug": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davegallant/pocketcasts_electron.git"
  },
  "dependencies": {
    "electron-store": "^1.3.0",
    "electron-updater": "^2.20.1"
  },
  "optionalDependencies": {
    "dbus": "^1.0.3"
  }
}
