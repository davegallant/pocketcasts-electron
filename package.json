{
  "name": "pocketcasts-electron",
  "version": "0.1.3",
  "license": "MIT",
  "main": "main.js",
  "build": {
    "appId": "com.pocketcasts.app",
    "files": [
      "**/*",
      "assets/icon.*"
    ],
    "mac": {
      "category": "sound.pocketcasts"
    }
  },
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run compile && npm run lint && electron-builder --publish=never",
    "clean": "rimraf app/out",
    "package": "npm run build && npm run compile && electron-builder --publish=never",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "assets": "copyfiles assets/** ./dist",
    "release": "npm run compile && electron-builder",
    "start": "npm run build && npm run assets && electron ./dist/main.js",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^20.38.5",
    "electron-debug": "^2.0.0",
    "electron-rebuild": "^1.8.2",
    "eslint": "^5.12.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/davegallant/pocketcasts_electron.git"
  },
  "dependencies": {
    "@types/electron-store": "^1.3.0",
    "copyfiles": "^2.1.0",
    "electron-log": "2.2.17",
    "electron-store": "^2.0.0",
    "electron-window-state": "^5.0.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  },
  "optionalDependencies": {
    "dbus": "^1.0.3"
  }
}
